<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sigida.Timetable.Presentation.Resources.Styles.Label.Labels">

    <Style x:Key="NameText" TargetType="Label">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="0,0,5,5"/>
        <Setter Property="FontFamily" Value="Nunito"/>
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource White200}}"/>
    </Style>

    <Style x:Key="Subtext" TargetType="Label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="Margin" Value="0"/>
        <Setter Property="FontFamily" Value="Nunito"/>
    </Style>

</ResourceDictionary>
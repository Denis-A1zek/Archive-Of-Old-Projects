<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:Sigida.Timetable.Presentation.Model"
             xmlns:viewmodel="clr-namespace:Sigida.Timetable.Presentation.ViewModel"
             x:Class="Sigida.Timetable.Presentation.View.Styles.Template.TimetableCardTamplate">
    <HorizontalStackLayout x:DataType="model:LessonDetails">
        <Label Style="{StaticResource SmallerText}" Text="{Binding Number}"/>
        <Label Style="{StaticResource SmallerText}" Text="{Binding Name}"/>
        <Label Style="{StaticResource SmallerText}" Text="{Binding Classroom}"/>
    </HorizontalStackLayout>
</ContentView>
